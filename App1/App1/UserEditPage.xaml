<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.UserEditPage"
             Title="Vartotojo keitimas">
    <StackLayout Margin="20">
        <Editor Placeholder="Įveskite savo vardą"
                Text="{Binding Name}"
                HeightRequest="100" />
        <Label Text="Titulo pakeitimas:" FontSize="18"/>
        <Picker x:Name="titlePicker" Title="Pasirinkti titulą" SelectedIndexChanged="titlePicker_OnPickerSelectedIndexChanged"
                SelectedItem="{Binding TitleId}"
                ItemDisplayBinding="{Binding TitleName}"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="Išsaugoti"
                    Clicked="OnUserSaveButtonClicked" />

        </Grid>
    </StackLayout>
</ContentPage>